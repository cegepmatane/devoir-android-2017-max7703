<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.qc.cgmatane.informatique.applicationtodo.VueAlarme"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/nom_todo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="text"
        android:textAlignment="center"
        android:textColor="?attr/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/action_stop_alarme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/action_stop_alarme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Alarme"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/action_todo_fait"
        app:layout_constraintTop_toBottomOf="@+id/nom_todo" />

    <Button
        android:id="@+id/action_todo_fait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Todo effectuÃ©"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/action_modifier_todo"
        app:layout_constraintTop_toBottomOf="@+id/action_stop_alarme" />

    <Button
        android:id="@+id/action_modifier_todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier Date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/action_todo_fait" />

</android.support.constraint.ConstraintLayout>
